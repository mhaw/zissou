# Copy this file to .env and fill in your project-specific details.

# -- GCP Configuration --
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="us-central1"
GCS_BUCKET="your-gcs-bucket-name"

# -- Application Configuration --
# A secret key for signing sessions. Generate one with `openssl rand -hex 32`
FLASK_SECRET_KEY="generate_a_random_hex_32_bytes"
# Backwards-compatible fallback if you previously used SECRET_KEY.
SECRET_KEY="your-secret-key"

# The environment, e.g., 'development' or 'production'
ENV="development"

# -- Authentication --
# Valid options: "iap" (default) or "firebase" for the legacy flow.
AUTH_BACKEND="iap"
# Enable auth guards when your deployment runs behind IAP. Leave false for local dev without headers.
AUTH_ENABLED="false"
# Comma separated list of admin user emails with elevated access
ADMIN_EMAILS="admin@example.com"

# Optional Firebase configuration (only required when AUTH_BACKEND=firebase)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_WEB_API_KEY="your-api-key"
FIREBASE_AUTH_DOMAIN="your-app.firebaseapp.com"
FIRESTORE_COLLECTION_USERS="users"
FIRESTORE_COLLECTION_SMART_BUCKETS="smart_buckets"
SESSION_COOKIE_LIFETIME_DAYS=5
SESSION_COOKIE_LIFETIME_REMEMBER_ME_DAYS=30

# -- Cloud Tasks & IAM --
# These are typically populated by running the ./infra/setup.sh script
CLOUD_TASKS_QUEUE="zissou-tasks"
CLOUD_TASKS_LOCATION="us-central1"
SERVICE_ACCOUNT_EMAIL="zissou-runner@your-gcp-project-id.iam.gserviceaccount.com"

# The public URL of your Cloud Run service. 
# This is required for the task handler to create authenticated requests.
# You can get this value after your first successful deployment by running:
# gcloud run services describe zissou --platform managed --region us-central1 --format 'value(status.url)'
SERVICE_URL="your-cloud-run-service-url"

# -- TTS Voice Configuration --
# See app/services/tts.py for available voice profiles
TTS_VOICE="deep-dive"
# -- Caching --
# Optional: configure Flask-Caching backend and TTL (defaults to SimpleCache).
# CACHE_TYPE=RedisCache
# CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300
